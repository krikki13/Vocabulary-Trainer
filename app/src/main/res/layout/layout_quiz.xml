<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:id="@+id/buttonNext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="8dp"
        android:textSize="16sp"
        android:text="Next" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/buttonNext"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#A3E0FF"
            android:paddingHorizontal="18dp"
            android:paddingVertical="15dp"
            android:text="Question"
            android:textColor="#123456"
            android:textSize="19sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#123A63" />

        <Button
            android:id="@+id/bAnswer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_hollow_button"
            android:paddingVertical="@dimen/quiz_answer_button_vertical_padding"
            android:layout_marginHorizontal="@dimen/quiz_answer_button_margin_hor"
            android:layout_marginTop="40dp"
            android:textSize="@dimen/quiz_answer_button_text_size"
            android:text="Answer 1" />

        <Button
            android:id="@+id/bAnswer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_hollow_button"
            android:paddingVertical="@dimen/quiz_answer_button_vertical_padding"
            android:layout_marginHorizontal="@dimen/quiz_answer_button_margin_hor"
            android:layout_marginTop="@dimen/quiz_answer_button_vertical_spacing"
            android:textSize="@dimen/quiz_answer_button_text_size"
            android:text="Answer 2" />

        <Button
            android:id="@+id/bAnswer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_hollow_button"
            android:paddingVertical="@dimen/quiz_answer_button_vertical_padding"
            android:layout_marginHorizontal="@dimen/quiz_answer_button_margin_hor"
            android:layout_marginTop="@dimen/quiz_answer_button_vertical_spacing"
            android:textSize="@dimen/quiz_answer_button_text_size"
            android:text="Answer 3" />

        <Button
            android:id="@+id/bAnswer4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_hollow_button"
            android:paddingVertical="@dimen/quiz_answer_button_vertical_padding"
            android:layout_marginHorizontal="@dimen/quiz_answer_button_margin_hor"
            android:layout_marginTop="@dimen/quiz_answer_button_vertical_spacing"
            android:textSize="@dimen/quiz_answer_button_text_size"
            android:text="Answer 4" />




    </LinearLayout>
</RelativeLayout>